{
  "name": "tech-evaluator",
  "version": "1.0.0",
  "description": "Application for me to mess around with up-and-coming JS tools",
  "main": "index.js",
  "scripts": {
    "start": "tsc && parcel index.html --open -p 3000 ",
    "build": "rm -rf dist && tsc && parcel build index.html",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "browserslist": "> 0.25%, not dead",
  "dependencies": {
    "@material-ui/core": "^3.9.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jquery": "^3.3.1",
    "parcel-bundler": "^1.10.3",
    "postcss-modules": "^1.4.1",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@types/bootstrap": "^4.2.0",
    "@types/jest": "^23.3.10",
    "@types/jquery": "^3.3.29",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-typescript": "^0.14.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^23.10.5",
    "typescript-eslint-parser": "^21.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.js?$": "<rootDir>/node_modules/ts-jest/dist/index.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.css": "identity-obj-proxy"
    },
    "testMatch": [
      "**/__tests__/**/*.test.+(ts|tsx|js)"
    ]
  }
}
