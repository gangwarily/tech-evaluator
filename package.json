{
  "name": "tech-evaluator",
  "version": "1.0.0",
  "description": "Application for me to mess around with up-and-coming JS tools",
  "main": "index.js",
  "scripts": {
    "start": "tsc && parcel index.html --open -p 3000 ",
    "build": "rm -rf dist && tsc && parcel build index.html",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "browserslist": "> 0.25%, not dead",
  "dependencies": {
    "parcel-bundler": "^1.10.3",
    "postcss-modules": "^1.4.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.17",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^23.10.5"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.js?$": "<rootDir>/node_modules/ts-jest/dist/index.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.css": "identity-obj-proxy"
    },
    "testMatch": [
      "**/__tests__/**/*.test.+(ts|tsx|js)"
    ]
  }
}
